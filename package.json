    "eslint-plugin-react-hooks": "4.2.0",
    "typescript": "4.0.2",
    "vercel": "20.1.0",
    "xo": "0.34.1"
  },
  "xo": {
    "extends": "xo-react",
    "globals": [
      "window",
      "crypto"
    ],
    "ignores": [
      "public"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
