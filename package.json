{
  "name": "secret",
  "version": "2.0.0",
  "description": "Send a message through a safe, private, and encrypted link that automatically expires to ensure your stuff does not remain online forever",
  "main": "index.js",
  "repository": "bukinoshita/secret",
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "engine": {
    "node": "10.12.4",
    "npm": "6.5.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server",
    "dev": "node server",
    "build": "next build",
    "now-build": "next build",
    "lint": "xo",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "base64-arraybuffer": "^0.1.5",
    "copy-text-to-clipboard": "^1.0.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "next": "^8.0.3",
    "next-offline": "^3.3.6",
    "next-routes": "^1.4.2",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-extras": "^0.9.0",
    "ua-parser-js": "^0.7.19"
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "globals": [
      "crypto",
      "window"
    ],
    "rules": {
      "react/no-unescaped-entities": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 100 --write",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
